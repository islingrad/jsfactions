//Faction_class_init

//Will take a pre-generated list of player names

var active_factions = []

function faction_class_init(listof_player_names){
	if (listof_player_names.length == 0){
		return []
		}
	else {
	var faction = {
		name : listof_player_names[0], 
		army_count : darmy_count, 
		army_price : darmy_price,
		army_counsumption : darmy_consumption,
		base_health : dbase_health, 
		base_foritfy_count : dbase_fortify_count,
		factory_count : dfactory_count,
		factory_price : dfactory_price,
		farm_count : dfarm_count,
		farm_price : dfarm_price,
		farm_yield : dfarm_yield,
		food_count : dfood_count,
		money : dmoney,
		spy_count : dspy_count,
		spy_price : dspy_price,
		worker_count : dworker_count,
		worker_consumption : dworker_consumption,
		worker_price : dworker_price
		};
	return [faction] + faction_class_init(listof_player_names[1:])
	}
}